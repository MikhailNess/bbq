<h2>Редактирование <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-group">
    <%= f.label "Пароль, не менее 6 символов ", class: "col-sm-4 control-label" %>
    <div class="col-sm-3 buffer-bottom">
        <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
    </div>
</div>

  <div class="form-group">
    <%= f.label "Подтверждение пароля", class: "col-sm-4 control-label" %>
    <div class="col-sm-3 buffer-bottom">
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
    </div>
</div>

<div class="form-group buffer-bottom">
    <div class="col-sm-offset-2 col-sm-6">
        <%= f.submit "Обновить", class: "btn btn-primary mb-2 mt-2" %>
    </div>
</div>

<% end %>
<div class="mb-2 mt-2">
  <%= button_to "Удалить мой профиль", registration_path(resource_name),
  data: { confirm: "Вы действительно хотите удалить профиль?" }, method: :delete%>
</div>

<%= link_to "Back", :back %>
