<h2>Регистрация пользователя</h2>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), data: { turbo: false }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

<div class="form-group">
    <%= f.label "Имя", class: "col-sm-2 control-label" %>
    <div class="col-sm-3 buffer-bottom">
        <%= f.text_field :name, class: "form-control",autofocus: true %>
    </div>
</div>

 <div class="form-group">
    <%= f.label :email, class: "col-sm-2 control-label" %>
    <div class="col-sm-3 buffer-bottom">
        <%= f.email_field :email, class: "form-control" %>
    </div>
</div>

  <div class="form-group">
    <%= f.label "Пароль, не менее 6 символов ", class: "col-sm-4 control-label" %>
    <div class="col-sm-3 buffer-bottom">
        <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
    </div>
</div>

  <div class="form-group">
    <%= f.label "Подтверждение пароля", class: "col-sm-4 control-label" %>
    <div class="col-sm-3 buffer-bottom">
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
    </div>
</div>

<div class="form-group buffer-bottom">
    <div class="col-sm-offset-2 col-sm-6">
        <%= f.submit "Зарегстрироваться", class: "btn btn-primary mb-2 mt-2" %>
    </div>
</div>

<div class="form-group">
  <%= render "devise/shared/links" %>
</div>
<% end %>
