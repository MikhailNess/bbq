<%= form_with(model: user, html: {multipart: true}) do |form| %>
  <%= render partial: "partials/form_errors", locals: {model: @user} %>
  <div class="mt-3">
    <%= form.label :name, "Имя", class: "form-label text-primary h4" %>
    <%= form.text_field :name, class: "form-control", autofocus: false  %>
  </div>

  <div class="mt-3">
    <%= form.label :username, class: "form-label text-primary h4" %>
    <%= form.text_field :username, class: "form-control" %>
  </div>

  <div class="mt-3">
    <%= form.label :email, class: "form-label text-primary h4" %>
    <%= form.text_field :email, class: "form-control" %>
  </div>

    <div class="mt-3">
    <%= form.label :avatar, class: "form-label text-primary h4" %>
      <p><%= image_tag(@user.avatar.thumb.url) if @user.avatar? %></p>
    <%= form.file_field :avatar, class: "form-control" %>
  </div>

  <div class="mt-3">
    <%= form.submit "Сохранить", class: "btn btn-primary"%> или <%= link_to "Вернуться", :back %>
  </div>
<% end %>
