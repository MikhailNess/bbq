<%= form_with(model: user, html: {multipart: true}) do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
        <% user.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="actions">
    <%= form.submit %>
  </div>

  <div class="mt-3">
    <%= form.label :name, class: "form-label text-primary h4" %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="mt-3">
    <%= form.label :username, class: "form-label text-primary h4" %>
    <%= form.text_field :username, class: "form-control" %>
  </div>

  <div class="mt-3">
    <%= form.label :email, class: "form-label text-primary h4" %>
    <%= form.text_field :email, class: "form-control" %>
  </div>

  <div class="mt-3">
    <%= form.submit "Сохранить", class: "btn btn-primary"%> или <%= link_to "Вернуться", :back %>
  </div>
<% end %>
